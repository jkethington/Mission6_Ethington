@{
    ViewData["Title"] = "Add to the Collection";
}

@model MovieMission6.Models.NewMovie



<p>Add a Movie to the collection!</p>

<form method="post">
    <input type="hidden" asp-for="MovieId" />   
    <br />
    <label asp-for="CategoryId">Movie Category</label>
    <select asp-for="CategoryId" class="form-select">
        @* <option value="Action/Adventure">Action/Adventure</option>
        <option value="Comedy">Comedy</option>
        <option value="Drama">Drama</option>
        <option value="Family">Family</option>
        <option value="Horror/Suspense">Horror/Suspense</option>
        <option value="Television">Television</option>
        <option value="VHS">VHS</option>
        <option value="Miscellaneous">Miscellaneous</option> *@
        @foreach (var c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />

    <label asp-for="Title">Movie Title: </label>
    <input asp-for="Title" required />
    <br />

    <label asp-for="Year">Year: </label>
    <input asp-for="Year" type="number" min="1888" required />
    <span asp-validation-for="Year" class="text-danger"></span>
    <br />

    <label asp-for="Director">Director: </label>
    <input asp-for="Director" required />
    <br />

    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="UR">UR</option>
        <option value="TV-G">TV-G</option>
        <option value="TV-14">TV-14</option>
        <option value="TV-Y7">TV-Y7</option>
        <option value="NR">NR</option>
    </select>
    <br />


    <label asp-for="Edited">Edited? </label>
    <select asp-for="Edited" class="form-select">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />

    <label asp-for="CopiedToPlex">Copied to Plex?</label>
    <input asp-for="CopiedToPlex" type="checkbox" />
    <br />

    <label asp-for="LentTo">Lent To: </label>
    <input asp-for="LentTo" />
    <br />

    <label asp-for="Notes">Notes: </label>
    <input asp-for="Notes" maxlength="25" />

    <br /><br />
    <button type="submit">Add Movie</button>
</form>

